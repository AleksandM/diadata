FROM golang:1.14 as build

WORKDIR $GOPATH

COPY . .

WORKDIR $GOPATH/src/github.com/diadata-org/diadata/cmd/blockchain/ethereum/diaStandardOracleService

RUN go install

FROM gcr.io/distroless/base

COPY --from=build /go/bin/diaStandardOracleService /bin/diaStandardOracleService

ENTRYPOINT ["diaStandardOracleService"]
