FROM golang:1.14 as build

WORKDIR $GOPATH

COPY . .

WORKDIR $GOPATH/src/github.com/diadata-org/diadata/cmd/blockchain/ethereum/diaAgoraOracleService

RUN go install

FROM gcr.io/distroless/base

COPY --from=build /go/bin/diaAgoraOracleService /bin/diaAgoraOracleService

ENTRYPOINT ["diaAgoraOracleService"]
