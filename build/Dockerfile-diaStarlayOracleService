FROM golang:1.14 as build

WORKDIR $GOPATH

COPY . .

WORKDIR $GOPATH/src/github.com/diadata-org/diadata/cmd/blockchain/ethereum/diaStarlayOracleService

RUN go install

FROM gcr.io/distroless/base

COPY --from=build /go/bin/diaStarlayOracleService /bin/diaStarlayOracleService

ENTRYPOINT ["diaStarlayOracleService"]
